<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.PasswordRecoverActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Recuperar contraseÃ±a"
        app:layout_constraintBottom_toTopOf="@+id/etxtEmailRecuperarContra"
        app:layout_constraintStart_toStartOf="@+id/etxtEmailRecuperarContra" />

    <EditText
        android:id="@+id/etxtEmailRecuperarContra"
        android:layout_width="272dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Introduce tu email"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />

    <Button
        android:id="@+id/btnEmailRecuperarContra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/etxtEmailRecuperarContra"
        app:layout_constraintStart_toStartOf="@+id/etxtEmailRecuperarContra"
        app:layout_constraintTop_toBottomOf="@+id/etxtEmailRecuperarContra" />
</androidx.constraintlayout.widget.ConstraintLayout>