<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.habits.CreateHabitActivity">

    <ImageView
        android:id="@+id/btnVolverInicio"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/go_back_arrow" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Crear Hábito"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVolverInicio" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/etxtNombreHabito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="#F1F1F1"
                android:ems="10"
                android:inputType="text"
                tools:layout_editor_absoluteX="204dp"
                tools:layout_editor_absoluteY="28dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Descripción"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/etxtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:layout_marginTop="7dp"
                android:background="#F1F1F1"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minLines="4" />

            <!--CONTENEDOR DE COLORES-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Seleccionar color"
                android:textSize="17sp" />

            <GridLayout
                android:id="@+id/contenedorColores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:alignmentMode="alignMargins"
                android:background="#F1F1F1"
                android:columnCount="8"
                android:padding="16dp"
                android:rowCount="2">

                <View
                    android:id="@+id/color1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#d24858"
                    android:tag="#d24858" />

                <View
                    android:id="@+id/color2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#d31900"
                    android:tag="#d31900" />

                <View
                    android:id="@+id/color3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#f76e2a"
                    android:tag="#f76e2a" />

                <View
                    android:id="@+id/color4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#fcae11"
                    android:tag="#fcae11" />

                <View
                    android:id="@+id/color5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#f9d423"
                    android:tag="#f9d423" />

                <View
                    android:id="@+id/color6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#9fd86b"
                    android:tag="#9fd86b" />

                <View
                    android:id="@+id/color7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#8fbe00"
                    android:tag="#8fbe00" />

                <View
                    android:id="@+id/color8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#059b9a"
                    android:tag="#059b9a" />

                <View
                    android:id="@+id/color9"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#536c8d"
                    android:tag="#536c8d" />

                <View
                    android:id="@+id/color10"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#5c4f79"
                    android:tag="#5c4f79" />

                <View
                    android:id="@+id/color11"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#613860"
                    android:tag="#613860" />

                <View
                    android:id="@+id/color12"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#4e3a3b"
                    android:tag="#4e3a3b" />

                <View
                    android:id="@+id/color13"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#666666"
                    android:tag="#666666" />

                <View
                    android:id="@+id/color14"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#929090"
                    android:tag="#929090" />

                <View
                    android:id="@+id/color15"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#af9c98"
                    android:tag="#af9c98" />

                <View
                    android:id="@+id/color16"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#ead1cb"
                    android:tag="#ead1cb" />

            </GridLayout>

            <!-- RECORDATORIOS -->
            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Recordatorios"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnGestionarRecordatorio"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:enabled="false"
                    android:gravity="left|center_vertical"
                    android:text="00:00" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchAlarma"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="false" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnEditarHabito"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:text="GUARDAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>