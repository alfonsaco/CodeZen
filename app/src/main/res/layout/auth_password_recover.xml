<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="?attr/colorOnPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.PasswordRecoverActivity">

    <ImageView
        android:id="@+id/btnVolverInicio"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/go_back_arrow" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:text="Recuperar contraseña"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVolverInicio" />

    <EditText
        android:id="@+id/etxtEmailRecuperarContra"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bordes_inputs"
        android:ems="10"
        android:hint="Introduce tu email"
        android:inputType="text"
        android:padding="14dp"
        android:textSize="14sp"
        android:paddingStart="15dp"
        android:textColor="?attr/colorPrimary"
        android:textColorHint="?attr/colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btnEmailRecuperarContra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="RECUPERAR CONTRASEÑA"
        app:layout_constraintEnd_toEndOf="@+id/etxtEmailRecuperarContra"
        app:layout_constraintStart_toStartOf="@+id/etxtEmailRecuperarContra"
        app:layout_constraintTop_toBottomOf="@+id/etxtEmailRecuperarContra" />
</androidx.constraintlayout.widget.ConstraintLayout>